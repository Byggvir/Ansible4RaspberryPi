        - php{{ item }}-fpm
        - php{{ item }}-fpm-dbgsym
        - php{{ item }}-gd
        - php{{ item }}-gd-dbgsym
        - php{{ item }}-gmp
        - php{{ item }}-gmp-dbgsym
        - php{{ item }}-imap
