        - php{{ item }}-xml-dbgsym
        - php{{ item }}-xmlrpc
        - php{{ item }}-xmlrpc-dbgsym
        - php{{ item }}-xsl
        - php{{ item }}-zip
        - php{{ item }}-zip-dbgsym
    state: absent
    update_cache: yes
  loop:
    - 7.1
    - 7.2
    - 7.3
    - 7.4
    - 5.6
    
- name: apt install apache2 and php 8.0
  become: yes
  apt:
    name: 
        - apache2-utils
        - libapache2-mod-php{{ item }}
        - libapache2-mod-proxy-uwsgi
        - php{{ item }}
        - php{{ item }}-bcmath
        - php{{ item }}-bz2
        - php{{ item }}-cgi
        - php{{ item }}-cli
        - php{{ item }}-common
        - php{{ item }}-curl
        - php{{ item }}-dba
        - php{{ item }}-dev
        - php{{ item }}-enchant
        - php{{ item }}-fpm
        - php{{ item }}-gd
        - php{{ item }}-gmp
        - php{{ item }}-imap
        - php{{ item }}-interbase
        - php{{ item }}-intl
        #- php{{ item }}-json
        - php{{ item }}-ldap
        - php{{ item }}-mbstring
        - php{{ item }}-mysql
        - php{{ item }}-odbc
        - php{{ item }}-opcache
        - php{{ item }}-pgsql
        - php{{ item }}-phpdbg
        - php{{ item }}-pspell
        - php{{ item }}-readline
        #- php{{ item }}-recode
        - php{{ item }}-snmp
        - php{{ item }}-soap
        - php{{ item }}-sqlite3
        - php{{ item }}-sybase
        - php{{ item }}-tidy
        - php{{ item }}-xml
        - php{{ item }}-xmlrpc
        - php{{ item }}-xsl
        - php{{ item }}-zip
        - imagemagick
    state: present
    update_cache: yes
  loop:
    - 8.0

- name: apt install mysql
  become: yes
  become_method: sudo
  apt:
    name: 
        - mariadb-server
    update_cache: yes

- name: apt install dns
  become: yes
  become_method: sudo
  apt:
    name: 
        - bind9
        - dnsutils
        - resolvconf
        - certbot
    update_cache: yes

- name: apt install mail
  become: yes
  become_method: sudo
  apt:
    name: 
        - dovecot-core
        - dovecot-pop3d
        - dovecot-antispam
        - dovecot-managesieved
        - dovecot-sieve
        - dovecot-mysql
        - dovecot-imapd
        - dovecot-lmtpd
        - postfix
        - postfix-mysql
        - redis-server
        - cyrus-sasl2-doc
        - libsasl2-modules
    update_cache: yes
...
