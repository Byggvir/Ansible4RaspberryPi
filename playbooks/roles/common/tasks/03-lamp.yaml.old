        - php{{ item }}-cgi-dbgsym
        - php{{ item }}-cli
        - php{{ item }}-cli-dbgsym
        - php{{ item }}-common
        - php{{ item }}-common-dbgsym
        - php{{ item }}-curl
        - php{{ item }}-curl-dbgsym
        - php{{ item }}-dba
        - php{{ item }}-dba-dbgsym
        - php{{ item }}-dev
        - php{{ item }}-enchant
